extends layout

block content


  nav.navbar
    .container.is-max-desktop
      .navbar-brand
        a(href="/").navbar-item Sortr.io
        span.navbar-burger(data-target="navbarMenuHeroA")
          span
          span
          span
      #navbarMenuHeroA.navbar-menu
        .navbar-end
          a(href="https://github.com/aschelch/sortr.io").navbar-item Github
          span.navbar-item
            a(href="/").button.is-primary
              span Sort a new list

  .container.is-max-desktop.has-text-centered
    .mt-6
      h1.title Left or Right ? 
      p.subtitle Choose which item is more important

    .columns.mt-6.is-mobile
      .column.is-half
        a(href="/sort/"+left.id+"/"+right.id+"/"+left.id)#left-win.button.is-primary.is-large.is-fullwidth= left.title
      .column.is-half
        a(href="/sort/"+left.id+"/"+right.id+"/"+right.id)#right-win.button.is-primary.is-large.is-fullwidth= right.title
    p.is-size-7.mb-6 You can use <strong>Left</strong> or <strong>Right</strong> key too
  

    h3.title.is-4 Results
    table.table.is-fullwidth
      thead
        th #
        th Item
        th Score
      tbody
        each item, idx in list
          tr
            td= idx+1
            td= item.title
            td= item.score

    a(href="/").button.is-medium Sort another list


  script(src="/javascripts/app.js") 
